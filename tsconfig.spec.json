/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "paths": {
      "@class/*":["src/app/class/*", "src/app/core/class/*"],
      "@component/*":["src/app/component/*", "src/app/core/component/*"],
      "@service/*":["src/app/service/*", "src/app/core/service/*"],
      "@function/*":["src/app/function/*", "src/app/core/function/*"],
      "@pipe/*":["src/app/pipe/*", "src/app/core/pipe/*"],
      "@directive/*":["src/app/directive/*", "src/app/core/directive/*"],
      "@config/*":["src/app/config/*", "src/app/core/config/*"]
    },
    "types": [
      "jasmine"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
